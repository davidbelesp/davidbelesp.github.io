<section id="experience" class="experience-section">
  <div class="experience-container">
    <h2 id="temporal-counter">12</h2>
  </div>
</section>

<style>
  :root {
    --card-color: #232323;
    --card-hover-color: #ffffff;
    --bg-color: #0d0d0d;
  }

  .experience-section {
    padding: 1rem;
    height: 200vh;
    color: white;
  }

  .experience-container {
    position: sticky;
    z-index: 1;
    top: 8vh;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 100%;
    min-height: 90vh;

    background-color: var(--bg-color);
    border-radius: 8px;
  }
</style>

<script>
  document.addEventListener("scroll", () => {
    const temporalCounter = document.getElementById("temporal-counter");
    temporalCounter!.innerHTML =
      document.documentElement.style.getPropertyValue("--scroll-progress");
  });
</script>
