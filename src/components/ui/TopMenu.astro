---
import astroLogo from "@/assets/astro.svg";
import { Image } from "astro:assets";
import TextAnimated from "./TextAnimated.astro";
import menubtn from "@/assets/menubtn.svg";
---

<nav class="menu-wrapper">
  <div class="menu">
    <div class="left-container">
      <Image src={astroLogo} alt="Logo" class="w-8 h-8 mr-2" />
      <a href="#landing"><TextAnimated text="DAVID" /></a>
    </div>

    <div class="right-container">
      <div class="links hidden md:flex">
        <a href="#languages"><TextAnimated text="Languages" /></a>
        <a href="#projects"><TextAnimated text="Projects" /></a>
        <a href="#experience"><TextAnimated text="Experience" /></a>
        <a href="#contact"><TextAnimated text="Contact" /></a>
      </div>

      <div class="buttons">
        <div class="menu-btn" id="menu-toggle">
          <div class="open-btn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-menu-icon lucide-menu"
              ><path d="M4 5h16"></path><path d="M4 12h16"></path><path
                d="M4 19h16"></path></svg
            >
          </div>
          <div class="close-btn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-x-icon lucide-x"
              ><path d="M18 6L6 18"></path><path d="M6 6l12 12"></path></svg
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="fullscreen-menu" id="fullscreen-menu">
  <div class="fs-content">
    <nav class="fs-links">
      <a href="#languages">Languages</a>
      <a href="#projects">Projects</a>
      <a href="#experience">Experience</a>
      <a href="#contact">Contact</a>
    </nav>
  </div>

  <footer class="fs-footer">
    <p>&copy; 2025 davidbelesp. All rights reserved.</p>
    <div class="socials">
      <span>Twitter</span>
      <span>Github</span>
    </div>
  </footer>
</div>

<style lang="scss">
  @reference "tailwindcss";

  // --- Main Bar & Wrapper ---
  .menu-wrapper {
    @apply flex justify-center items-center;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
  }

  .menu {
    @apply flex justify-between items-center;
    width: 60%;
    min-width: 300px;
    padding: 10px 20px;
    margin-top: 10px;
    background-color: black;
    border-radius: 5px;
    color: white;
    transition: background-color 0.3s ease;

    @media (min-width: 768px) {
      min-width: 600px;
    }

    // Nested Containers
    .left-container {
      @apply flex items-center;
      font-weight: bold;
    }

    .right-container {
      @apply flex items-center;
      gap: 1rem;
    }
  }

  // --- Inline Links (Desktop) ---
  .links {
    @apply flex items-center gap-4;
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    transition: opacity 0.3s ease, transform 0.3s ease;

    a {
      text-decoration: none;
      color: white;
      font-size: 0.9rem;
      &:hover { opacity: 0.8; }
    }

    // State: Disabled/Hidden
    &.disabled {
      opacity: 0;
      pointer-events: none;
      transform: translateY(-10px);
    }
  }

  // --- Hamburger Button Logic ---
  .menu-btn {
    @apply flex items-center justify-center;
    cursor: pointer;
    width: 24px;
    height: 24px;
    position: relative;
    z-index: 101;

    // Shared styles for both icon states
    .open-btn,
    .close-btn {
      position: absolute;
      transition: all 0.3s ease-in-out;
    }

    .open-btn {
      opacity: 1;
      transform: rotate(0deg) scale(1);
      
      // When menu is active, hide this
      :global(.menu-active) & {
        opacity: 0;
        transform: rotate(90deg) scale(0);
      }
    }

    .close-btn {
      opacity: 0;
      transform: rotate(0deg) scale(0);
      pointer-events: none;

      // When menu is active, show this
      :global(.menu-active) & {
        opacity: 1;
        transform: rotate(90deg) scale(1);
        pointer-events: auto;
      }
    }
  }

  // --- Fullscreen Overlay ---
  .fullscreen-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #000;
    z-index: 90;
    
    // Layout
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    // Default State (Hidden)
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transform: translateY(-20px);
    overflow: hidden;
    transition: all 0.4s ease-in-out;

    // Active State (Visible)
    :global(.menu-active) & {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      transform: translateY(0);
    }

    // Inner Content
    .fs-content {
      flex-grow: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .fs-links {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      text-align: center;

      a {
        color: white;
        font-size: 3rem;
        font-weight: 700;
        text-decoration: none;
        text-transform: uppercase;
        transition: color 0.3s;

        &:hover { color: #ff0055; }
      }
    }

    .fs-footer {
      padding-bottom: 3rem;
      color: #888;
      text-align: center;

      p { margin-bottom: 0.5rem; }

      .socials {
        display: flex;
        gap: 1rem;
        justify-content: center;
        
        span {
          cursor: pointer;
          &:hover { color: white; }
        }
      }
    }
  }
</style>

